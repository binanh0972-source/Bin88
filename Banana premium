-- Section 7: Change Transparency
getgenv().ChangeTransparency = false
Section7:NewSlider("Change Transparency", "ƒê·ªô trong su·ªët", 100, 0, function(val)
    local transparency = val / 100
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Transparency = transparency
        end
    end
end)

