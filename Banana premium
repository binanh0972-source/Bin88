-- Ki·ªÉm tra v√† load th∆∞ vi·ªán
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("BANANA PREMIUM", "Sentinel")

-- Th√¥ng b√°o khi load th√†nh c√¥ng
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Banana Premium",
    Text = "ƒê√£ t·∫£i th√†nh c√¥ng! Nh·∫•n RightShift ƒë·ªÉ m·ªü menu",
    Duration = 3
})

-- Main Tabs
local Tab1 = Window:NewTab("C√†y Level")
local Tab2 = Window:NewTab("Auto Farm")
local Tab3 = Window:NewTab("Boss")
local Tab4 = Window:NewTab("ƒê·∫£o & Di Chuy·ªÉn")
local Tab5 = Window:NewTab("Event")
local Tab6 = Window:NewTab("ESP")
local Tab7 = Window:NewTab("Misc")

-- Section 1: C√†y Level
local Section1 = Tab1:NewSection("C√ÄY LEVEL")
Section1:NewLabel("Nh·∫≠n nhi·ªám v·ª• ·∫©n t·ª± ƒë·ªông")

-- Auto Quest
getgenv().AutoQuest = false
Section1:NewToggle("T·ª± ƒë·ªông nh·∫≠n nhi·ªám v·ª•", "T·ª± ƒë·ªông nh·∫≠n quest ·ªü ƒë·∫£o m·ªõi", function(state)
    getgenv().AutoQuest = state
    while getgenv().AutoQuest do
        pcall(function()
            -- T·ª± ƒë·ªông nh·∫≠n quest
            local args = {
                [1] = "StartQuest",
                [2] = "JungleQuest"
            }
            game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
        end)
        task.wait(0.5)
    end
end)

-- Auto Farm Level
getgenv().AutoFarmLevel = false
Section1:NewToggle("T·ª± ƒë·ªông ƒë√°nh qu√°i g·∫ßn nh·∫•t", "Auto farm qu√°i g·∫ßn", function(state)
    getgenv().AutoFarmLevel = state
    while getgenv().AutoFarmLevel do
        pcall(function()
            -- Auto attack logic
            local combatFramework = require(game:GetService("Players").LocalPlayer.PlayerScripts.CombatFramework)
            local target = combatFramework.getTarget()
            if target then
                combatFramework.attack(target)
            end
        end)
        task.wait(0.1)
    end
end)

-- Section 2: Boss Farm
local Section2 = Tab3:NewSection("BOSS FARM")
Section2:NewLabel("ƒê√°nh Boss theo ƒë·∫£o")

-- Boss locations
local bossLocations = {
    ["JUNGLE PIRATE"] = CFrame.new(-1619.44287, 37.9151192, -297.889069),
    ["VILLAGE"] = CFrame.new(-789.459656, 73.3670502, 1410.42334),
    ["MIDDLE TOWN"] = CFrame.new(274.789276, 78.9150848, 953.534424),
    ["FROZEN VILLAGE"] = CFrame.new(1114.31091, 144.871796, 1451.22278),
    ["JEAN-LUC ISLAND"] = CFrame.new(2716.85107, 7.39842081, 48.4102364),
    ["MARINE FORTRESS"] = CFrame.new(-3847.56519, 20.823019, 2041.55042),
    ["JUNGLE"] = CFrame.new(-1619.44287, 37.9151192, -297.889069),
    ["PRISON"] = CFrame.new(4901.20898, 1.28183782, -1269.40173),
    ["MAGMA VILLAGE"] = CFrame.new(-5224.85596, 50.2374306, 4316.18213),
    ["UNDERWATER CITY"] = CFrame.new(3864.96729, 125.676888, -1924.07214),
    ["UPPER SKYLANDS"] = CFrame.new(-5005.19531, 317.868896, -3122.24243)
}

for location, cframe in pairs(bossLocations) do
    Section2:NewButton("ƒê√°nh Boss "..location, "T·ª± ƒë·ªông t√¨m v√† ƒë√°nh boss", function()
        getgenv().AutoBoss = true
        while getgenv().AutoBoss do
            pcall(function()
                local player = game.Players.LocalPlayer
                local character = player.Character
                if character then
                    character.HumanoidRootPart.CFrame = cframe
                    task.wait(3)
                    -- Auto attack boss
                    local combatFramework = require(player.PlayerScripts.CombatFramework)
                    combatFramework.attack()
                end
            end)
            task.wait(0.5)
        end
    end)
end

-- Section 3: Auto Ship & Island
local Section4 = Tab4:NewSection("T√ÄU & ƒê·∫¢O")

getgenv().AutoFindMirage = false
Section4:NewToggle("T·ª± ƒë·ªông t√¨m ƒë·∫£o b√≠ ·∫©n", "Auto t√¨m Mirage Island", function(state)
    getgenv().AutoFindMirage = state
    while getgenv().AutoFindMirage do
        pcall(function()
            -- Auto sail logic
            local ship = workspace:FindFirstChild("Ships") or workspace:FindFirstChild("Boats")
            if ship then
                -- Find Mirage Island logic
                local mirage = workspace:FindFirstChild("Mirage Island")
                if mirage then
                    local player = game.Players.LocalPlayer
                    player.Character.HumanoidRootPart.CFrame = mirage.PrimaryPart.CFrame + Vector3.new(0,50,0)
                end
            end
        end)
        task.wait(1)
    end
end)

getgenv().AutoLookMoon = false
Section4:NewToggle("T·ª± ƒë·ªông nh√¨n trƒÉng", "Auto Look At Moon", function(state)
    getgenv().AutoLookMoon = state
    while getgenv().AutoLookMoon do
        pcall(function()
            local moon = workspace:FindFirstChild("Moon")
            if moon then
                local player = game.Players.LocalPlayer
                player.Character.HumanoidRootPart.CFrame = CFrame.new(player.Character.HumanoidRootPart.Position, moon.Position)
            end
        end)
        task.wait(0.5)
    end
end)

getgenv().AutoCollectGear = false
Section4:NewToggle("T·ª± ƒë·ªông nh·∫∑t b√°nh rƒÉng", "Auto Collect Gear", function(state)
    getgenv().AutoCollectGear = state
    while getgenv().AutoCollectGear do
        pcall(function()
            for _, v in pairs(workspace:GetDescendants()) do
                if v.Name == "Gear" and v:IsA("Part") then
                    local player = game.Players.LocalPlayer
                    player.Character.HumanoidRootPart.CFrame = v.CFrame
                    firetouchinterest(player.Character.HumanoidRootPart, v, 0)
                    task.wait(0.3)
                end
            end
        end)
        task.wait(0.5)
    end
end)

getgenv().AutoPullLever = false
Section4:NewToggle("T·ª± ƒë·ªông g·∫°t c·∫ßn", "Auto Pull Lever", function(state)
    getgenv().AutoPullLever = state
    while getgenv().AutoPullLever do
        pcall(function()
            for _, v in pairs(workspace:GetDescendants()) do
                if v.Name == "Lever" and v:IsA("Part") then
                    local player = game.Players.LocalPlayer
                    player.Character.HumanoidRootPart.CFrame = v.CFrame
                    firetouchinterest(player.Character.HumanoidRootPart, v, 0)
                    task.wait(0.3)
                end
            end
        end)
        task.wait(0.5)
    end
end)

